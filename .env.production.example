# Production Environment Variables Template
# Copy this to .env.production and fill in actual values

# ==============================================
# DIRECTUS CMS CONFIGURATION
# ==============================================
DIRECTUS_URL=https://directus-apmt.flx.web.id
NEXT_PUBLIC_DIRECTUS_URL=https://directus-apmt.flx.web.id
DIRECTUS_ADMIN_TOKEN=<generate-secure-token>

# Directus Secrets (for docker-compose.prod.yml)
DIRECTUS_KEY=<generate-random-key-min-32-chars>
DIRECTUS_SECRET=<generate-random-secret-min-32-chars>

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL Connection
POSTGRES_DB=apm_portal
POSTGRES_USER=apm_user
POSTGRES_PASSWORD=<strong-password-here>

# Direct Database Connection (for registrasi API)
DB_HOST=postgres
DB_PORT=5432
DB_NAME=apm_portal
DB_USER=apm_user
DB_PASSWORD=<strong-password-here>

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
NEXT_PUBLIC_BASE_URL=https://apmt.flx.web.id
NEXT_PUBLIC_APP_NAME="APM Portal"
NODE_ENV=production

# ==============================================
# SECURITY & OPTIMIZATION
# ==============================================
# Revalidation Secret (for webhook)
REVALIDATION_SECRET=<generate-random-secret>

# ==============================================
# NOTES
# ==============================================
# Generate secure keys/secrets using:
#   openssl rand -base64 32
# Or use password generator with min 32 characters
